{% extends "base.jinja2" %}
{% block body %}
  <hr>
  <h2 id="gallery">Detailed Post View</h2>
  <hr>
  <div id="detail_post">
      <article class="entry" id="title={{entry.id}}">
       <h3 id="post_title">{{ entry.title }}</h3>
        <div class="post">
           <p class="dateline">{{ entry.created.strftime('%b. %d, %Y') }}</p>
            <div class="entry_body" id ="test">
             {{ entry.text|markdown|safe }}
            </div>
        </div>
      </article>
  </div>
  <div id="editing">
  </div>
  <div id="edited">
  </div>
  <div style="text-align:center;">
  <button class="edit_button">Edit</button>
  </div>
{% endblock %}

