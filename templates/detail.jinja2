{% extends "base.jinja2" %}
{% block body %}
  <h2 id="gallery">Detailed Post View</h2>
  <div id="detail_post">
      <article class="entry" id="title={{entry.id}}">
       <h3 id="post_title">{{ entry.title }}</h3>
        <div class="post">
           <p class="dateline">{{ entry.created.strftime('%b. %d, %Y') }}</p>
            <div class="entry_body" id ="test">
             {{ entry.render_markdown()|safe }}
            </div>
        </div>
      </article>
      <div style="text-align:center" class="twitter">
      <a href="https://twitter.com/share" class="twitter-share-button" data-text="New Blog Post: {{entry.title}}" data-via="BeckerCommaNick" data-size="large" data-dnt="true">Tweet</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
      </div>
  </div>
  <div id="editing">
  </div>
  <div id="edited">
  </div>
  {% if request.authenticated_userid %}
  <div style="text-align:center;">
  <a href="#" id="new_edit_button">
  <button class="edit_button">Edit</button>
  </a>
  </div>
  {% endif %}
{% endblock %}

